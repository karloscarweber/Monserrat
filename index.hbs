{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<div class="grid-block colored clearfix">

    {{> "masthead"}}

    {{#foreach posts}}
        {{#if featured}}
        <div class="article-intro clearfix">
            <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
            <p><a class="read-more" href="{{url}}">{{excerpt words="36"}}</a></p>
            <a href="{{url}}" class="button square">Read More</a>
        </div>
        {{/if}}
    {{/foreach}}

