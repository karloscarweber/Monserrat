{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}
<div class="grid-block pageMasthead clearfix">
  
    {{#if image}} 
        <div class="image-div" style="background-image:url({{image}})"></div>
    {{else}} 
        <div class="image-div special-image-div" style="background-image:url(/assets/images/PageHeader@2x.png)"></div>
    {{/if}}

    {{> "masthead"}}
    
</div>

<main class="content grid-block clearfix" role="main">
    <div class="grid-row">
        <article class="{{post_class}} grid-column actualpostcontentarea">

          <header class="post-header">
              <h1 class="post-title">{{title}}</h1>
          </header> 

            <section class="post-content">
                {{content}}
            </section>

        </article>
    </div>
</main>

{{/post}}
