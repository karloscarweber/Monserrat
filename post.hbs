{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}
<div class="grid-block colored clearfix">

    {{#if image}} 
        <div class="image-div" style="background-image:url({{image}})"></div>
    {{/if}}

    {{> "masthead"}}
    
</div>

<main class="content grid-block clearfix" role="main">
    <div class="grid-row">
        <article class="{{post_class}} post grid-column actualpostcontentarea" style="margin-bottom:60px;">

            <header class="post-header">
                <h1 class="post-title">{{title}}</h1>
                <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMM Do YYYY"}}</time>
                <div class="post-vertibar"></div>
            </header>  

            <section class="post-content">
                {{content}}
                
                <footer class="post-master-footer post-meta">
                  <p>Written by {{author}}, Published: <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMM Do YYYY"}}</time>. {{tags prefix=" on "}}</p>
                </footer>
                <!--<aside class="superwideAuthorAside clearfix">
                    <span>Learn more about the author:</span>
                    {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}} <p>{{author}} {{tags prefix=" on "}} <br><time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMM Do YYYY"}}</time></p>
                    <p>Read <a href="{{url}}">more posts</a> by this author.</p>
                </aside>-->
            </section>

        </article>
    </div>
</main>

<div class="nextpreviousenclosingbox clearfix">
    <aside class="read-next">
        {{#next_post}}
        <a class="read-next-story" href="{{url}}"><h3>Next Article</h3></a>
        <br>
        <a class="nextpreviousArticleTitle" href="{{url}}"><h3>{{title}}</h3></a>
        <section class="post-excerpt clearfix">
            <p>{{excerpt words="36"}}</p>
        </section>
        <a href="{{url}}" class="nextpreviousButton">Read More</a>
        {{/next_post}}
    </aside>
    <aside class="read-previous">
        {{#prev_post}}
        <a class="read-prev-story" href="{{url}}"><h3>Previous Article</h3></a>
        <br>
        <a class="nextpreviousArticleTitle" href="{{url}}"><h3>{{title}}</h3></a>
        <section class="post-excerpt clearfix">
            <p>{{excerpt words="36"}}</p>
        </section>
        <a href="{{url}}" class="nextpreviousButton">Read More</a>
        {{/prev_post}}
    </aside>
</div>

{{/post}}
