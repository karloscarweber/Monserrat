{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}
<div class="grid-block colored clearfix">

    {{> "masthead"}}

    <div class="article-intro clearfix">
        <!-- <h1 class="blog-description">{{@blog.description}}</h1> -->
        <h1 class="post-title">{{{title}}}</h1>
    </div>
    
</div>

<main class="content grid-block clearfix" role="main">
    <div class="grid-row">
        <article class="{{post_class}} grid-column double-centered-column">

            <!-- <header class="post-header"> -->
                <!-- <h1 class="post-title">{{title}}</h1> -->
            <!-- </header> -->

            <section class="post-content">
                {{content}}
            </section>

            <footer class="post-footer post-meta">
                {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}} {{author}} {{tags prefix=" on "}} | <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                
                {{#author}}        
                
                    <p>Read <a href="{{url}}">more posts</a> by this author.</p>
                    <div class="author-meta">
                        {{#if location}}<span class="author-location icon-location">{{location}}</span>{{/if}}
                        {{#if website}}<span class="author-link icon-link"><a href="{{website}}">{{website}}</a></span>{{/if}}
                    </div>
                    
                {{/author}}

            </footer>

        </article>
    </div>
</main>

<div class="content grid-block colored clearfix">
    <div class="grid-row">
        <aside class="read-next grid-column double-column">
            {{#next_post}}
            <a class="read-next-story" href="{{url}}"><h3>Next Article</h3></a>
            <br>
            <a href="{{url}}"><h3>{{title}}</h3></a>
            <section class="post-excerpt clearfix">
                <p>{{excerpt words="60"}}</p>
            </section>
            <a href="{{url}}" class="button square">Read More</a>
            {{/next_post}}
        </aside>
        <aside class="read-previous grid-column double-column">
            {{#prev_post}}
            <a class="read-next-story prev" href="{{url}}"><h3>Previous Article</h3></a>
            <br>
            <a href="{{url}}"><h3>{{title}}</h3></a>
            <section class="post-excerpt clearfix">
                <p>{{excerpt words="60"}}</p>
            </section>
            <a href="{{url}}" class="button square">Read More</a>
            {{/prev_post}}
        </aside>
    </div>
</div>

{{/post}}
